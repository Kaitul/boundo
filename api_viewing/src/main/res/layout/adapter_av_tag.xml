<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avAdapterInfoTag"
    android:background="@drawable/av_item_tag_back"
    android:backgroundTint="?colorABackground"
    android:alpha="@fraction/surfaceAlpha"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:clickable="false"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="14dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/avAdapterInfoTagIcon"
        tools:src="@mipmap/ic_launcher"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/avAdapterInfoTagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textStyle="bold"
        android:textAppearance="@style/AvTagText"
        android:textColor="?colorAOnBackground"
        tools:ignore="SmallSp"
        tools:text="System" />
</LinearLayout>
