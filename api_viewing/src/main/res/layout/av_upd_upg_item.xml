<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avUpdUpgItemNewCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="2dp"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/radius"
    app:cardElevation="0dp">

    <LinearLayout
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avUpdUpgItemNewSeal"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    tools:src="@drawable/seal_r_vector"
                    android:alpha="0.35"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:paddingTop="8dp"
                android:paddingBottom="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="17"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/avUpdUpgItemNewIcon"
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:padding="2dp"
                            tools:src="@mipmap/ic_launcher" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="14"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/avUpdUpgItemNewName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                tools:text="Boundo"
                                android:textColor="?colorAOnBackground"
                                android:textSize="18sp" />

                            <HorizontalScrollView
                                android:scrollbars="none"
                                android:requiresFadingEdge="horizontal"
                                android:overScrollMode="never"
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.material.chip.ChipGroup
                                    android:id="@+id/avUpdUpgItemNewTags"
                                    app:singleLine="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/avUpdUpgItemNewVer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="3.7.0"
                            android:textColor="?colorTextSub"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/avUpdUpgItemNewTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="0 min ago"
                            android:textColor="?colorTextSub"
                            android:textSize="8sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/avUpdUpgItemNewApi"
                        android:minWidth="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="30"
                        android:textColor="?colorAOnBackground"
                        android:textSize="25sp" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/avUpdUpgItemPreBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avUpdUpgItemPreSeal"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    tools:src="@drawable/seal_q_vector"
                    android:alpha="0.35"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="17">

                    <TextView
                        android:id="@+id/avUpdUpgItemPreVer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="3.6.9"
                        android:textColor="?colorTextSub"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/avUpdUpgItemPreTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="18 days ago"
                        android:textColor="?colorTextSub"
                        android:textSize="8sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="start|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/avUpdUpgItemPreApi"
                        android:minWidth="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="29"
                        android:textColor="?colorAOnBackground"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
