<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frequentUnitsAdapterCard"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/radius"
    android:focusable="true"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/frequentUnitsAdapterIcon"
            android:background="@drawable/res_circle"
            android:backgroundTint="?colorAItem"
            app:tint="?colorAOnItem"
            android:alpha="@fraction/surfaceAlpha"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            tools:srcCompat="@drawable/ic_android_24" />

        <TextView
            android:id="@+id/frequentUnitsAdapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:maxWidth="60dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="10sp"
            android:textColor="?colorAOnBackground"
            tools:text="App API"
            tools:ignore="SmallSp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
