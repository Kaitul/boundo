<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:requiresFadingEdge="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/settingsUnits"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/settingsItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                app:drawableStartCompat="@drawable/ic_palette_24"
                app:drawableTint="?colorAOnBackground"
                android:text="@string/settings_exterior"
                android:textColor="?colorAOnBackground"
                android:textSize="18sp"
                android:drawablePadding="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/settingsItemLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                app:drawableStartCompat="@drawable/ic_language_24"
                app:drawableTint="?colorAOnBackground"
                android:text="@string/Settings_Button_SwitchLanguage"
                android:textColor="?colorAOnBackground"
                android:textSize="18sp"
                android:drawablePadding="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/settingsItemAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                app:drawableStartCompat="@drawable/ic_info_24"
                app:drawableTint="?colorAOnBackground"
                android:text="@string/Main_TextView_Advice_Text"
                android:textColor="?colorAOnBackground"
                android:textSize="18sp"
                android:drawablePadding="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
