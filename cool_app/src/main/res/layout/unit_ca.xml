<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:animateLayoutChanges="true"
    android:scrollbars="none"
    android:requiresFadingEdge="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/app_info_display_background"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/appInfoLogo"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <View
            android:id="@+id/app_info_focus"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/app_info_name"
            android:textColor="?colorAccent"
            android:textSize="22sp"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:hint="@string/app_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/app_info_progress"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/caRating"
            android:textColor="?android:textColor"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_star_24"
            android:drawableTint="?android:textColor"
            android:drawablePadding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/app_info_downloads"
            android:textColor="?android:textColor"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_download_24"
            android:drawableTint="?android:textColor"
            android:drawablePadding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/app_info_flowers"
            android:textColor="?android:textColor"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_favorite_24"
            android:drawableTint="?android:textColor"
            android:drawablePadding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/app_info_comments"
            android:textColor="?android:textColor"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_comment_24"
            android:drawableTint="?android:textColor"
            android:drawablePadding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
